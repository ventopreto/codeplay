<% if course.errors.any? %>
  <ul>
          <% course.errors.each do |error|%>
          <li><%= error.message %> </li>
            <% end %>
  </ul>
<% end %>



<%= form_with model: course do |f| %>
<%= f.label :name, "Nome" %>
<%= f.text_field :name %>
<%= f.label :description, "Descrição" %>
<%= f.text_area :description %>
<%= f.label :code, "Código" %>
<%= f.text_field :code %>
<%= f.label :instructor_id, "Professor" %>
<%= f.collection_select :instructor_id, instructors, :id, :name %>
<%= f.label :price, "Preço" %>
<%= f.text_field :price %>
<%= f.label :enrollment_deadline, "Data limite de matrícula" %>
<%= f.date_field :enrollment_deadline %>
<%= f.submit button_text %>
<% end %>

