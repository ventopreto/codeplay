
  
  <dl>
  <dt>Nome</dt>
  <dd><%= @course.name %></dd>
  <dt>Descrição</dt>
    <dd><%= @course.description%></dd>
    <dt>Código</dt>
    <dd><%= @course.code%></dd>
    <dt>Preço</dt>
    <dd><%= number_to_currency(@course.price) %></dd>
    <dt>Professor</dt>
    <dd><%= @course.instructor.name %></dd>
    <dt>Data limite de matrícula</dt>
    <dd><%= @course.enrollment_deadline.strftime("%d/%m/%Y")  %></dd>
</dl>

    <%= link_to 'Registrar Aula', new_course_lesson_path(@course, @lesson) %>
    <%= link_to 'Ver Aulas', course_lessons_path(@course, @lesson) %>
    <%= link_to 'Editar', edit_course_path %>
    <%= link_to 'Deletar', course_path, method: :delete, data: {confirm: 'Deseja excluir este curso?'} %>
    <%= link_to 'Voltar', courses_path %>
