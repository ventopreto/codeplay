<div class="row">
<%= form_with model: instructor do |f| %>
  <div class="col">
<%= f.label :name, "Nome", class:"form-label" %>
<%= f.text_field :name, class:"form-control" %>
  </div>

<div class="col">
<%= f.label :email, "Email", class:"form-label" %>
<%= f.text_area :email, class:"form-control" %>
</div>

<div class="col">
<%= f.label :bio, "Descrição", class:"form-label" %>
<%= f.text_field :bio, class:"form-control" %>
</div>


  <div class="col">
<%= f.label :profile_picture, "Foto de perfil", class:"form-label" %>
<%= f.file_field :profile_picture, class:"form-select"  %> <br>
</div>


<%= f.submit button_text, class:"btn btn-primary"%>
<%= link_to t('links.back'), root_path, class: "btn btn-primary" %>
  
<% end %>
</div>