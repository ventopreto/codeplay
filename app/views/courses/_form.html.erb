<% if course.errors.any? %>
  <ul>
          <% course.errors.each do |error|%>
          <li><%= error.message %> </li>
            <% end %>
  </ul>
<% end %>


<div class="row">
<%= form_with model: course do |f| %>
  <div class="col">
<%= f.label :name, "Nome", class:"form-label" %>
<%= f.text_field :name, class:"form-control" %>
  </div>

<div class="col">
<%= f.label :description, "Descrição", class:"form-label" %>
<%= f.text_area :description, class:"form-control" %>
</div>

<div class="col">
<%= f.label :code, "Código", class:"form-label" %>
<%= f.text_field :code, class:"form-control" %>
</div>


  <div class="col">
<%= f.label :instructor_id, "Professor", class:"form-label" %>
<%= f.collection_select :instructor_id, instructors, :id, :name , class:"form-select"  %> <br>
</div>

  <div class="col">
<%= f.label :price, "Preço", class:"form-label" %>
<%= f.text_field :price, class:"form-control"  %>
</div>


  <div class="col">
<%= f.label :enrollment_deadline, "Data limite de matrícula", class:"form-label" %>
<%= f.date_field :enrollment_deadline, class:"form-control"  %>
  </div>

<%= f.submit button_text, class:"btn btn-primary"%>
<%= link_to t('links.back'), root_path, class: "btn btn-primary" %>
<% end %>
</div>

